<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - crm</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900|Material+Icons" rel="stylesheet" type="text/css">
    <link href="https://use.fontawesome.com/releases/v6.1.1/css/all.css" rel="stylesheet" type="text/css">
    <link href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/quasar@2.10.2/dist/quasar.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="app">
        <q-toolbar class="bg-secondary text-white q-pa-md">
            <q-btn flat label="Home" onclick="location.href='@Url.Action("Index", "Home")'"></q-btn>
            <q-space></q-space>
            <q-btn-dropdown stretch flat label="Dropdown1">
                <q-list>
                    <q-item-label header>Folder</q-item-label>
                    <q-item>
                        <q-item-section avatar>
                            <q-avatar icon="folder" color="secondary" text-color="white" />
                        </q-item-section>
                        <q-item-section>
                            <q-item-label>Photos</q-item-label>
                            <q-item-label caption>February 22, 2016</q-item-label>
                        </q-item-section>
                        <q-item-section side>
                            1
                        </q-item-section>
                    </q-item>
                </q-list>
            </q-btn-dropdown>
            <q-btn flat label="Leads" onclick='location.href="@Url.Action("Index", "Lead")"'></q-btn>
            <q-btn flat label="Contacts" onclick="location.href='@Url.Action("Index", "Contact")'"></q-btn>
            <q-btn flat label="Opportunities" onclick="location.href='@Url.Action("Index", "Opportunity")'"></q-btn>
        </q-toolbar>
        @RenderBody()
    </div>
    
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/moment.min.js"></script>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/quasar@2.10.2/dist/quasar.umd.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
